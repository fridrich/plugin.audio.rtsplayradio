<addon id="plugin.audio.rtsplayradio" name="RTS Play Radio" version="0.9.0" provider-name="Alexander Seiler">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.module.srgssr" version="1.6.1"/>
    <import addon="script.module.kodi-six" version="0.0.3"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="fr_FR">RTS Play audiothèque</summary>
    <summary lang="en_GB">RTS Play audio media library</summary>
